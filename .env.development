# Development Environment Configuration for RandevuBu
# This file contains development-specific settings with relaxed security for easier development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development database (no SSL required)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/randevubu?schema=public"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Development Redis (no password)
REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT & AUTHENTICATION (Development Keys)
# =============================================================================
# Simple keys for development (DO NOT use in production)
JWT_ACCESS_SECRET="dev-access-secret-key-randevubu-2024"
JWT_REFRESH_SECRET="dev-refresh-secret-key-randevubu-2024"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# =============================================================================
# COOKIE & SESSION SECURITY
# =============================================================================
COOKIE_SECRET="dev-cookie-secret-randevubu"
SESSION_SECRET="dev-session-secret-randevubu"
SESSION_EXPIRES_IN="24h"

# =============================================================================
# RATE LIMITING (Relaxed for Development)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=10

# =============================================================================
# CORS CONFIGURATION (Permissive for Development)
# =============================================================================
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:8080"

# =============================================================================
# SMS/PHONE VERIFICATION (Mock for Development)
# =============================================================================
# Mock SMS service for development
SMS_API_KEY="dev-sms-api-key"
SMS_API_URL="https://mock-sms-api.example.com"

# =============================================================================
# EMAIL CONFIGURATION (Development - Use Mailhog)
# =============================================================================
# Mailhog SMTP settings for development email testing
SMTP_HOST="localhost"
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASS=""

# =============================================================================
# PAYMENT PROCESSING (Sandbox)
# =============================================================================
# Iyzico sandbox credentials for development
IYZICO_API_KEY="sandbox-development-api-key"
IYZICO_SECRET_KEY="sandbox-development-secret-key"
IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"

# =============================================================================
# AWS S3 CONFIGURATION (Development)
# =============================================================================
# Development S3 bucket (or use LocalStack for local S3)
AWS_ACCESS_KEY_ID="dev-aws-access-key"
AWS_SECRET_ACCESS_KEY="dev-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="randevubu-development-assets"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="debug"
LOG_FILE="/var/log/randevubu/app.log"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
DEFAULT_TIMEZONE="Europe/Istanbul"
DEFAULT_LANGUAGE="tr"
DEFAULT_CURRENCY="TRY"

# =============================================================================
# PAGINATION CONFIGURATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="/tmp/uploads/"

# =============================================================================
# MONITORING & METRICS (Development)
# =============================================================================
# Enable all metrics in development
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# Debug features
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true
PRISMA_STUDIO_PORT=5555

# Development tools
ENABLE_DEV_TOOLS=true
HOT_RELOAD=true
WATCH_FILES=true

# Mock external services
MOCK_SMS_SERVICE=true
MOCK_PAYMENT_SERVICE=false
MOCK_EMAIL_SERVICE=true

# Database debugging
PRISMA_DEBUG=true
LOG_QUERIES=true

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================
# 1. These settings are optimized for development productivity
# 2. Security is relaxed for easier debugging and testing
# 3. External services use sandbox/mock implementations
# 4. Logging is verbose for better debugging
# 5. Never use these settings in production!