# Production Environment Configuration for RandevuBu
# IMPORTANT: Copy this to .env and update all placeholder values before deployment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SECURITY: Use strong passwords and enable SSL in production
DATABASE_URL="postgresql://randevubu_user:CHANGE_ME_STRONG_PASSWORD@postgres:5432/randevubu?schema=public&sslmode=require"
POSTGRES_PASSWORD=CHANGE_ME_STRONG_DATABASE_PASSWORD

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Used for caching and session storage
REDIS_URL="redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379"
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# =============================================================================
# JWT & AUTHENTICATION
# =============================================================================
# SECURITY: Generate cryptographically secure random keys
# Use: openssl rand -base64 64
JWT_ACCESS_SECRET="CHANGE_ME_GENERATE_SECURE_64_CHAR_KEY"
JWT_REFRESH_SECRET="CHANGE_ME_GENERATE_DIFFERENT_64_CHAR_KEY"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# =============================================================================
# COOKIE & SESSION SECURITY
# =============================================================================
# SECURITY: Generate secure keys for cookie signing
COOKIE_SECRET="CHANGE_ME_GENERATE_SECURE_COOKIE_KEY"
SESSION_SECRET="CHANGE_ME_GENERATE_SECURE_SESSION_KEY"
SESSION_EXPIRES_IN="24h"

# =============================================================================
# RATE LIMITING (Production Values)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=14

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# SECURITY: Replace with your actual frontend domains
CORS_ORIGINS="https://yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com"

# =============================================================================
# SMS/PHONE VERIFICATION
# =============================================================================
# Replace with your SMS provider credentials
SMS_API_KEY="your-production-sms-api-key"
SMS_API_URL="https://api.your-sms-provider.com"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Production SMTP settings
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT=587
SMTP_USER="noreply@yourdomain.com"
SMTP_PASS="your-email-app-password"

# =============================================================================
# PAYMENT PROCESSING (IYZICO)
# =============================================================================
# SECURITY: Use production Iyzico credentials
IYZICO_API_KEY="your-production-iyzico-api-key"
IYZICO_SECRET_KEY="your-production-iyzico-secret-key"
IYZICO_BASE_URL="https://api.iyzipay.com"

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
# SECURITY: Use IAM role with minimal required permissions
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="eu-west-1"
AWS_S3_BUCKET_NAME="randevubu-production-assets"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="warn"
LOG_FILE="/var/log/randevubu/app.log"

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
DEFAULT_TIMEZONE="Europe/Istanbul"
DEFAULT_LANGUAGE="tr"
DEFAULT_CURRENCY="TRY"

# =============================================================================
# PAGINATION CONFIGURATION
# =============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=50

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================
MAX_FILE_SIZE="5MB"
UPLOAD_PATH="/var/uploads/"

# =============================================================================
# MONITORING & METRICS
# =============================================================================
# Enable Prometheus metrics collection
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="randevubu-production-backups"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Add any additional external service configurations here

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Never commit this file with real credentials to version control
# 2. Use strong, unique passwords for all services
# 3. Rotate keys and passwords regularly
# 4. Enable SSL/TLS for all database connections
# 5. Use environment-specific secrets management in production
# 6. Monitor and log all authentication attempts
# 7. Set up automated security scanning and vulnerability monitoring