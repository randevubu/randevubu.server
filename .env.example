# ------------------------------------------------------------------------------
# Core Server Configuration
# ------------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
API_VERSION=v1

# ------------------------------------------------------------------------------
# Database & ORM
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host:5432/randevubu

# ------------------------------------------------------------------------------
# Authentication & Security
# ------------------------------------------------------------------------------
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-secret
JWT_SECRET=legacy-secret-if-required
DISABLE_HTTPS_ENFORCEMENT=false

# ------------------------------------------------------------------------------
# Logging & Observability
# ------------------------------------------------------------------------------
LOG_BASE_DIR=./logs
ERROR_LOG_DIR=./logs/errors
ALL_LOG_DIR=./logs/all

# ------------------------------------------------------------------------------
# CORS (comma-separated list; REQUIRED in production)
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ------------------------------------------------------------------------------
# Redis / Cache
# ------------------------------------------------------------------------------
REDIS_URL=redis://:password@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-me

# ------------------------------------------------------------------------------
# AWS / Storage / Email
# ------------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=randevubu-assets
PUBLIC_ASSET_BASE_URL=https://cdn.example.com
AWS_SES_FROM_EMAIL=no-reply@example.com
AWS_SES_REPLY_EMAIL=support@example.com

# ------------------------------------------------------------------------------
# External Integrations
# ------------------------------------------------------------------------------
GOOGLE_PLACES_API_KEY=your-google-places-key
IYZICO_API_KEY=your-iyzico-key
IYZICO_SECRET_KEY=your-iyzico-secret

# ------------------------------------------------------------------------------
# Monitoring / Telemetry (optional)
# ------------------------------------------------------------------------------
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# ------------------------------------------------------------------------------
# Miscellaneous
# ------------------------------------------------------------------------------
PUBLIC_URL=https://api.example.com
