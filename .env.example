# Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/randevubu?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Phone Verification Service
PHONE_VERIFICATION_SERVICE_URL=your-phone-verification-service-url
PHONE_VERIFICATION_API_KEY=your-phone-verification-api-key

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100