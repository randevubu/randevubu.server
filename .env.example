# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/randevubu_db?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET="your-jwt-access-secret-key-here"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-here"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Cookie Configuration
COOKIE_SECRET="your-cookie-secret-key-here"
COOKIE_DOMAIN="" # Leave empty for localhost in development, set to your domain in production (e.g., "yourdomain.com")

# API Configuration
API_VERSION="v1"
PORT=3000
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Security
BCRYPT_ROUNDS=12

# SMS/Phone Verification (Mock for development)
SMS_API_KEY="your-sms-api-key"
SMS_API_URL="https://api.sms-provider.com"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"

# Iyzico Payment Configuration
# For production, get these from: https://merchant.iyzipay.com/
# For sandbox testing, use the sandbox values
IYZICO_API_KEY="sandbox-your-api-key"
IYZICO_SECRET_KEY="sandbox-your-secret-key"
IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"

# Production Iyzico Configuration (uncomment and use for production)
# IYZICO_API_KEY="your-production-api-key"
# IYZICO_SECRET_KEY="your-production-secret-key"
# IYZICO_BASE_URL="https://api.iyzipay.com"

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Redis Configuration (Production-ready)
REDIS_URL="redis://localhost:6379"
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# File Upload Configuration
MAX_FILE_SIZE="10MB"
UPLOAD_PATH="uploads/"

# AWS S3 Configuration for Image Storage
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-s3-bucket-name"

# Business Configuration
DEFAULT_TIMEZONE="Europe/Istanbul"
DEFAULT_LANGUAGE="tr"
DEFAULT_CURRENCY="TRY"

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Session Configuration
SESSION_SECRET="your-session-secret-here"
SESSION_EXPIRES_IN="24h"